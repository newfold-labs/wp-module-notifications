{
  "name": "newfold-labs/wp-module-notifications",
  "description": "A module for managing Newfold in-site notifications.",
  "license": "GPL-2.0-or-later",
  "repositories": [
    {
      "type": "composer",
      "url": "https://newfold-labs.github.io/satis/",
      "only": [
        "newfold-labs/*"
      ]
    },
    {
      "type": "composer",
      "url": "https://bluehost.github.io/satis/",
      "only": [
        "bluehost/*",
        "endurance/*",
        "mojoness/*",
        "newfold/*"
      ]
    }
  ],
  "authors": [
    {
      "name": "Micah Wood",
      "email": "micah@wpscholar.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "NewFoldLabs\\WP\\Module\\Notifications\\": "includes"
    },
    "files": [
      "bootstrap.php"
    ]
  },
  "require-dev": {
    "wp-cli/i18n-command": "^2.6.3"
  },
  "require": {
    "newfold-labs/wp-module-data": "^2.0.0",
    "wpscholar/url": "^1.2",
    "wp-forge/helpers": "^2.0",
    "wp-forge/collection": "^1.0"
  },
  "scripts": {
    "i18n-pot": "vendor/bin/wp i18n make-pot . ./languages/wp-module-notifications.pot --headers='{\"Report-Msgid-Bugs-To\":\"https://github.com/newfold-labs/wp-module-notifications/issues\",\"POT-Creation-Date\":\"2025-02-13T09:55:55+00:00\"}'",
    "i18n-po": "vendor/bin/wp i18n update-po ./languages/wp-module-notifications.pot ./languages",
    "i18n-mo": "vendor/bin/wp i18n make-mo ./languages",
    "i18n-json": "rm -f languages/*.json && vendor/bin/wp i18n make-json ./languages --no-purge --pretty-print",
    "i18n": [
      "@i18n-pot",
      "@i18n-po",
      "@i18n-mo",
      "@i18n-json"
    ]
  }
}
